        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/Font</item>
        <!-- Define the font family for all EditTexts -->
        <item name="android:fontFamily">@font/vazir</item>
        <item name="android:listDivider">@color/purple_500</item>

